@using MudBlazor

<MudDialog MaxWidth="MaxWidth.ExtraSmall" FullWidth="true">
    <MudDialogTitle>Error</MudDialogTitle>
    <MudDialogContent>
        <MudText Typo="Typo.h6">Please enter the correct city</MudText>
    </MudDialogContent>
    <MudDialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="CloseDialog">OK</MudButton>
    </MudDialogActions>
</MudDialog>

@code {
    [CascadingParameter] public MudDialogInstance MudDialog { get; set; }
    
    private void CloseDialog() => MudDialog.Close();
}
